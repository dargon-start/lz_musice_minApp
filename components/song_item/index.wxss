/* components/song_item/index.wxss */
.song_item{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.left_index{
  width: 10%;
  font-size: 40rpx;
  line-height: 100%;
  text-align: center;
}
.song_info {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song_info .song_name{
  font-size: 34rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song_info .art_info{
  display: flex;
  align-items: center;
}
.song_info .art_info .sq_icon{
  width: 50rpx;
  height: 30rpx;
  margin: 0 3px 0 0 ;
}
.song_info .art_info .song_ar{
  font-size: 28rpx;
  color: #7a7676;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}